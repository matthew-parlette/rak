<div class="container-fluid">
  <div class="row-fluid">
    <div class="span10 well text-center">
      <div class="text-left">
        <%= render partial: 'overview', locals: {r: @relationship} %>
      </div>
    </div>
    <div class="span2">
      <div class="btn-group">
        <%= link_to_modal "Edit", edit_relationship_path(@relationship), class: "btn" %>
        <button class="btn dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li>
            <%= link_to_modal "Edit", edit_relationship_path(@relationship) %>
          </li>
          <li>
          <%= link_to "Delete", relationship_path(@relationship),
                method: "delete", class: "delete_relationship",
                data: { confirm: 'Are you sure?' } %>
          </li>
        </ul>
      </div>
      
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="span4">
        <%= render partial: 'ideas', locals: {ideas: Idea.where(:relationship_id => @relationship.id)} %>
      </div>
    </div>
  </div>
</div>
