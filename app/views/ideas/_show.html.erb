<div class="container-fluid">
  <div class="row-fluid">
    <div class="span10">
      <h2><%= idea.title %></h2>
      <blockquote><p><%= idea.description %></p></blockquote>

      <dl class="dl-horizontal">
        <dt>Last Done</dt>
        <dd><%= render partial: 'ideas/last_done', locals: {idea: idea} %></dd>
        
        <dt>Reception</dt>
        <dd><div id="idea-show-<%= idea.id %>" class="rating" data-url="<%= idea_path(idea) %>" data-readonly=true></div></dd>
      </dl>
    </div>
    <div class="span2">
      <div class="btn-group">
        <%= link_to_modal "Edit", edit_idea_path(idea), class: "btn" %>
        <button class="btn dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li>
            <%= link_to_modal "Edit", edit_idea_path(idea) %>
          </li>
          <li>
          <%= link_to "Delete", idea_path(idea),
                method: "delete", class: "delete_idea",
                data: { confirm: 'Are you sure?' } %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <% @events.each do |e| %>
  <div class="well" style="padding-bottom: 0px;">
    <%= render partial: 'events/overview', locals: {event: e} %>
  </div>
<% end %>
</div>
