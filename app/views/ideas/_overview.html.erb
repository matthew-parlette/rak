<div class="container-fluid idea-overview">
  <div class="row-fluid">
    <div class="span7">
      <abbr title="<%= i.description %>"><%= link_to i.title, idea_path(i), :remote => true, :class => "idea-overview-title" %></abbr>
    </div>
    <div></div>
    <div class="span5">
      <%= link_to_modal "I did this!", new_idea_event_path(i), :class => "btn btn-small" %>
