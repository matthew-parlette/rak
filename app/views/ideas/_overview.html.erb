<div class="container-fluid idea-overview">
  <div class="row-fluid">
    <div class="span7">
      <abbr title="<%= i.description %>"><%= link_to i.title, idea_path(i), :remote => true, :class => "idea-overview-title" %></abbr>
    </div>
    <div></div>
    <div class="span5">
      <%= link_to_modal "I did this!", new_idea_event_path(i), :class => "btn btn-small" %>
    </div>
  </div>
  <div class="row-fluid" style="margin-top: .5em; padding-bottom: 0em;">
    <div class="span6">
      <%= render partial: 'ideas/last_done', locals: {idea: i} %>
    </div>
    <div class="span6">
      <div id="idea-<%= i.id %>" class="rating" data-url="<%= idea_path(i) %>" data-readonly=true></div>
    </div>
  </div>
</div>
